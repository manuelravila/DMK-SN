        <xml><![CDATA[<?xml version="1.0" encoding="utf-8" ?>
<j:jelly trim="true" xmlns:j="jelly:core" xmlns:g="glide" xmlns:j2="null" xmlns:g2="null">
	<g:macro type="text" name="REQUIRED" label="REQUIRED" id="REQUIRED" value="" onchange="onChange('${jvar_name}');"  mandatory="false"  style="" readonly="false" maxlength=""/>
	<g:set_if var="jvar_is_required" test="${jvar_mandatory == 'true'}" true="is-required" false="" />
	<g:evaluate var="jvar_dateTimeFormat">
		var dateTimeFormat = gs.getDateTimeFormat();
		dateTimeFormat
	</g:evaluate>
	<j:if test="${jvar_readonly == 'false'}">
		<div id="element.${jvar_id}" class="form-group ${jvar_is_required} ">
			<div id="label.${jvar_id}" class="col-xs-12 col-md-3 col-lg-4 text-right">
				<label for="${jvar_id}" dir="ltr" class="control-label">
					<span id="status.${jvar_id}" mandatory="" oclass="" class="required-marker"></span>
					<span class="label-text" data-html="false">${jvar_label}</span>
				</label>
			</div>
			<div class="col-xs-12 col-md-9 col-lg-8 form-field input_controls">
				<label for="${jvar_id}" style="display:none">${jvar_name}</label>
				<span class="input-group ">
					<input class="form-control text-align-right-ltr" id="${jvar_id}" type="${jvar_type}" 
						   name="${jvar_name}" value="${jvar_value}" onchange="${jvar_onchange}"/>
					<span class="input-group-btn">
						<button class="btn btn-default btn-ref" name="button.${jvar_name}" id="button.${jvar_id}" tabindex="-1" 
								title="Select date and time" aria-label="Select date and time" data-date_time_format="${jvar_dateTimeFormat}" 
								data-original-title="Select date and time" onclick="new GwtDateTimePicker('${jvar_id}', g_user_date_format, false);" type="button">
							<span class="icon-calendar icon" aria-hidden="true"></span>
						</button>
					</span>
				</span>
			</div>
		</div>
	</j:if>
	<j:if test="${jvar_readonly == 'true'}">
		<div id="element.${jvar_id}" class="form-group">
			<div id="label.${jvar_id}" class="col-xs-12 col-md-3 col-lg-4 text-right">
				<label for="${jvar_id}" dir="ltr" class="control-label">
					<span class="label-text" data-html="false">${jvar_label}</span>
				</label>
			</div>
			<div class="col-xs-12 col-md-9 col-lg-8 form-field input_controls ">
				<input type="${jvar_type}" id="${jvar_id}" name="${jvar_id}" class="form-control" 
					   value="${jvar_value}" onclick="select();" readonly="readonly"/>
			</div>
		</div>
	</j:if>
</j:jelly>

]]></xml>
    </sys_ui_macro>
</record_update>
