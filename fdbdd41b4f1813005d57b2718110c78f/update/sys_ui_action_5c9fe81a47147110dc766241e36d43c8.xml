        <script><![CDATA[function onClick() {
	
	var selectedIds = g_list.getChecked();
    // Check if any charges are selected
    if (selectedIds == "") {
        alert("Please select the charge(s) you want to waive");
        return;
    }
	
    var answer = confirm("You are about to change the amount of the selected charges to $0. This cannot be undone. Are you sure you want to do this?");
    if (answer) {
        // Call the server-side Script Include
        var ga = new GlideAjax('x_89907_vehicle_to.WaiveChargesAjaxProcessor');
        ga.addParam('sysparm_name', 'waiveCharges');
        ga.addParam('sysparm_ids', g_list.getChecked());
        ga.getXML(function(response) {
            var result = ga.getAnswer();
            //alert(result);
            g_list.refresh();  // move the list refresh into the callback function
        });
    }
}
]]></script>
