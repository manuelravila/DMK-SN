        <script><![CDATA[(function executeRule(current, previous /* null when async */) {
/** 
 * The user submitted the Toll User Statement. Determine the progress phase
 * and calculate some totals
 */

 // Reset the internal flag
	current.setValue("internal_submit", false);

	// Get the list of related personal tolls
	var chargeGR;
	chargeGR = new GlideRecord("x_89907_vehicle_to_toll_charge");
	chargeGR.addQuery("user_statement", "=", current.sys_id);
	chargeGR.addQuery("personal_toll", "=", true);
	chargeGR.query();

	// If none, acknowledged, else mark as payment owed and calculate total
	if (!chargeGR.hasNext()) {
		current.setValue("progress_phase", "0"); // Set to Acknowledged
		current.setValue("personal_amount", 0);
	} else {
		var totalPersonalAmount = 0;
		while (chargeGR.next()) {
			totalPersonalAmount += parseFloat(chargeGR.getValue("amount"));
		}
		current.setValue("personal_amount", totalPersonalAmount);
		current.setValue("progress_phase", "2"); // PaymentOwed
	}
})(current, previous);
]]></script>
