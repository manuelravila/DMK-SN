        <script><![CDATA[(function executeRule(current, previous /* null when async */) {
/** 
 * Update the Toll User Statement with the latest comments from the
 * Rejection action if the approval was rejected with comment
 */

	if (current == null) {
		// prevent null pointer exceptions.
		return;
	}
	var approvalGR = new GlideRecord("sysapproval_approver");
	approvalGR.addQuery("document_id", current.sys_id);
	approvalGR.addQuery("state", "=", "rejected");
	approvalGR.query();
	if (approvalGR.next()) {
		var newNotes = approvalGR.comments.getJournalEntry(1);
		if (newNotes) {
			current.status_notes = 	newNotes;
		}
	}
})(current, previous);]]></script>
