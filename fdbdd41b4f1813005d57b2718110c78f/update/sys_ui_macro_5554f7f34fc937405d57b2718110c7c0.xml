<?xml version="1.0" encoding="UTF-8"?><record_update table="sys_ui_macro">
    <sys_ui_macro action="INSERT_OR_UPDATE">
        <active>true</active>
        <category>general</category>
        <description>Creates a text input field with calendar popup&#13;
&#13;
Attributes: &#13;
type=the type for the input field, defaults to text&#13;
name= name of the input field, REQUIRED&#13;
label=the label of the field, REQUIRED&#13;
id=the id of the field, REQUIRED&#13;
value= initial value of the field&#13;
onchange=the javascript to call onchange (default: onChange('${jvar_name}')&#13;
mandatory=whether or not this field is madatory, defaults to false&#13;
style=the style of the input field&#13;
readonly=make the input field readonly, defaults to false&#13;
&#13;
Usage:&#13;
		&lt;g:macro_invoke macro="x_89907_vehicle_to_payment_wizard_field" name="check_amount" label="Check Amount" id="x_89907_vehicle_to_payment_wizard_page2_checkamount"  /&gt;</description>
